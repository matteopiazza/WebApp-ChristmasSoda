<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
      id="WebApp_ID" version="4.0">

  <servlet>
    <servlet-name>HomeSrvlt</servlet-name>
    <servlet-class>HomeSrvlt</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginSrvlt</servlet-name>
    <servlet-class>LoginSrvlt</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutSrvlt</servlet-name>
    <servlet-class>LogoutSrvlt</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StudentUpdatesSrvlt</servlet-name>
    <servlet-class>StudentUpdatesSrvlt</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>FacultyUpdatesSrvlt</servlet-name>
    <servlet-class>FacultyUpdatesSrvlt</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserInfoSrvlt</servlet-name>
    <servlet-class>UserInfoSrvlt</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeSrvlt</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>HomeSrvlt</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginSrvlt</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutSrvlt</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>StudentUpdatesSrvlt</servlet-name>
    <url-pattern>/studentUpdates</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>FacultyUpdatesSrvlt</servlet-name>
    <url-pattern>/facultyUpdates</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UserInfoSrvlt</servlet-name>
    <url-pattern>/userInfo</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>FilterSecure</filter-secure>
    <filter-class>FilterSecure</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FilterSecure</filter-secure>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
